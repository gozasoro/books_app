<h2><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field uk-margin">
    <%= f.label :email, class: 'uk-form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'uk-input' %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'uk-button uk-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
