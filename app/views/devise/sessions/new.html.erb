<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field uk-margin">
    <%= f.label :email, class: 'uk-form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'uk-input' %>
  </div>

  <div class="field uk-margin">
    <%= f.label :password, class: 'uk-form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'uk-input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: 'uk-button uk-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
